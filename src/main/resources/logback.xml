<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Definir el formato de los logs -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Appender para archivo de logs -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/granja-inteligente.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Archivo diario -->
            <fileNamePattern>logs/granja-inteligente.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Mantener logs de los últimos 30 días -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Logger para el paquete de la aplicación -->
    <logger name="com.granjainteligente" level="DEBUG"/>
    
    <!-- Logger raíz -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>
</configuration>
